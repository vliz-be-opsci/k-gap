# Example LDES feeds configuration file
# This file should be placed in the data directory and configured via LDES_CONFIG_FILE environment variable

feeds:
  # Example feed 1
  - name: example-feed-1
    url: https://marineinfo.org/feed/person
    sparql_endpoint: http://graphdb:7200/repositories/kgap/statements
    polling_interval: 60  # seconds (optional, defaults to 60)
    environment:  # optional additional environment variables
      # Add any additional environment variables needed by ldes2sparql here
      # EXAMPLE_VAR: value

  # Example feed 2
  - name: example-feed-2
    url: https://marineinfo.org/feed/publication
    sparql_endpoint: http://graphdb:7200/repositories/kgap/statements
    polling_interval: 120

# Note: Each feed will spawn a separate ldes2sparql Docker container instance
# Container names will be: ldes-consumer-{feed-name}
